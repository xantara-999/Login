<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="100dp"
        android:fontFamily="@font/vins"
        android:text="HELLO! PLEASE LOGIN TO GET STARTED "
        android:textColor="@color/black"
        android:textSize="30dp" />


    <EditText
        android:id="@+id/email"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="365dp"
        android:background="@color/gray"
        android:hint=" Enter Your Email"
        android:padding="15dp"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="10dp"
        android:drawableTint="#696969"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray"
        android:padding="15dp"
        android:hint="Enter Your Password"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/baseline_vpn_key_24"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/baseline_visibility_off_24"
        android:inputType="textPassword"
        android:longClickable="false"/>


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:background="@color/black"
        android:fontFamily="@font/urban"
        android:padding="10dp"
        android:text="LOGIN"
        android:textSize="19dp"
        android:onClick="onLoginClicked"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogin"
        android:text="continue as a guest"
        android:gravity="center"
        android:layout_marginTop="40dp"
        />



</RelativeLayout>